@using App.UI.Mvc5.Areas.Users.Models

@model AccountLogInViewModel

<!-- Meta -->

@{
	Model.PageTitle = GetLocalizedString("Auth_LoginTitle");
}

<!-- Sections -->

@section page_scripts_init {
	<script src="~/areas/users/scripts/account.login.js"></script>
}

<!-- Page Contents -->

<div class="row justify-content-md-center">

	<div class="col-6">

		<form id="mainForm" method="post">

			@Html.AntiForgeryToken()
			@*@Html.ValidationSummary()*@

			<div class="form-group">
				@Html.LabelFor(model => model.EmailOrUsername)
				@Html.TextBoxFor(model => model.EmailOrUsername, new { @class = "form-control", @tabindex = 1, @autofocus = "autofocus" })
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Password, new { @class = "pull-left" })
				<a href="@Url.Action("PasswordRecover", "Account", new { area = AppAreas.GetAreaName(Area.Users) })" class="pull-right">@GetLocalizedString("Auth_RecoverPasswordCallout")</a>
				@Html.PasswordFor(model => model.Password, new { @class = "form-control", @tabindex = 2 })
			</div>

			<div class="form-check">
				<label class="form-check-label">
					@Html.CheckBoxForTheme(model => model.RememberMe, new { @class = "form-check-input" })
					@Html.DisplayNameFor(model => model.RememberMe)
				</label>
			</div>

			<button type="submit" class="btn btn-primary btn-block btn-lg mt-3">@GetLocalizedString("Auth_LoginLabel")</button>

		</form>

	</div>

</div>

<div class="container text-center">

	<p class="m-5">@GetLocalizedString("Auth_SignUpCallout") <a href="@Url.Action("SignUp", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">@GetLocalizedString("Auth_SignUpCalloutAction")</a></p>

</div>
